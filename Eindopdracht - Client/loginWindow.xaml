<Window x:Class="Eindopdracht___Client.loginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eindopdracht___Client"
        mc:Ignorable="d"
        Title="loginWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Name="UserName" TextChanged="UserName_TextChanged"/>
        <Button Content="Go" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Name="GoButton" Click="GoButton_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="nl-nl" Text="Fill in your Name"/></TextBlock>

    </Grid>
</Window>
